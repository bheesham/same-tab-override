  "manifest_version": 2,
  "name": "Same Tab Override",
  "version": "0.0.2",
  "description": "Links open in a new tab? No thanks.",
  "icons": {},
  "content_scripts": [
    {
      "matches": ["https://sso.mozilla.com/dashboard"],
